@page
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ChatUser> SignInManager

<div class="div">
    <ul>
        @{foreach (var signedInUser in @ViewBag.SignedInUsers)
            {
                <li><a href="#" class="userOnline">@signedInUser</a></li>
            }

        }
    </ul>
</div>

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        Talking to:
        <span id="talkingTo"></span>
    </div>
    <div class="row">
        <div class="row">
            <div class="col-12">Message</div>
            <div class="col-12"><input type="text" id="messageInput" /></div>
        </div>
        <div class="row">&nbsp;</div>
    </div>
    <div class="row">
        <input type="button" id="sendButton" value="Send Message" />
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
